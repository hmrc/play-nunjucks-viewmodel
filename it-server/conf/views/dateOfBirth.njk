{% extends "includes/layout.njk" %}

{% from "govuk-frontend/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk-frontend/components/date-input/macro.njk"    import govukDateInput %}
{% from "govuk-frontend/components/button/macro.njk"        import govukButton %}
{% from "govuk-frontend/components/error-summary/macro.njk" import govukErrorSummary %}

{% block pageTitle %}

    {% set titlePrefix = messages("error.title.prefix") if errorSummary else "" %}

    {{ titlePrefix + ' ' + messages("dateOfBirth.title") }}

{% endblock %}

{% block content %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if errorSummary %}
          {{ govukErrorSummary(errorSummary) }}
        {% endif %}

        <form action="{{ routes.controllers.SingleComponentController.submitDateOfBirth().url }}" method="post">

          {{ csrf() | safe }}

          {{ govukDateInput(dateOfBirth) }}

          {{ govukButton({
            text: messages("site.continue")
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
